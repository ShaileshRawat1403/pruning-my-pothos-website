---
interface LinkItem {
  title: string;
  href: string;
}

interface Props {
  sectionLabel: string;
  sectionHref: string;
  previous?: LinkItem | null;
  next?: LinkItem | null;
  related?: LinkItem[];
}

const { sectionLabel, sectionHref, previous, next, related = [] } = Astro.props;
const hasRelated = related.length > 0;
const hasNav = Boolean(previous || next);
---

<section class="continue-block" aria-label="Continue reading">
  <div class="continue-grid">
    {hasNav && (
      <div class="continue-column">
        <span class="continue-kicker">Continue</span>
        {previous && (
          <a class="continue-link" href={previous.href}>
            <span class="continue-label">Previous</span>
            <span class="continue-title">{previous.title}</span>
          </a>
        )}
        {next && (
          <a class="continue-link" href={next.href}>
            <span class="continue-label">Next</span>
            <span class="continue-title">{next.title}</span>
          </a>
        )}
      </div>
    )}

    <div class="continue-related">
      <a class="continue-back" href={sectionHref}>Back to {sectionLabel}</a>
      {hasRelated && (
        <>
          <span class="continue-label">Related</span>
          <ul>
            {related.map((item) => (
              <li><a href={item.href}>{item.title}</a></li>
            ))}
          </ul>
        </>
      )}
    </div>
  </div>
</section>

<style>
  .continue-block {
    border-top: 1px solid var(--color-border);
    margin-top: 3rem;
    padding-top: 2rem;
  }
  .continue-kicker {
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.7rem;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }
  .continue-back {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-text-body);
    text-decoration: none;
    margin-bottom: 0.5rem;
  }
  .continue-back:hover {
    text-decoration: underline;
  }
  .continue-grid {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 0.75fr);
    gap: 2rem;
    align-items: start;
  }
  .continue-column,
  .continue-related {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  .continue-related {
    text-align: left;
    align-items: flex-start;
  }
  .continue-link {
    text-decoration: none;
    color: var(--color-text-body);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 0.9rem 1rem;
    background: var(--color-blockquote-bg);
    transition: border-color 0.2s ease, transform 0.2s ease;
  }
  .continue-link:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }
  .continue-label {
    font-family: var(--font-mono);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.68rem;
    color: var(--color-text-muted);
  }
  .continue-title {
    display: block;
    margin-top: 0.35rem;
    font-size: 1rem;
    color: var(--color-text-heading);
  }
  .continue-related ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.6rem;
  }
  .continue-related a {
    color: var(--color-text-body);
    text-decoration: none;
  }
  .continue-related a:hover {
    text-decoration: underline;
  }
  @media (max-width: 720px) {
    .continue-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
