---
const today = new Date();
---
<footer class="footer">
    <div class="footer-inner">
        <div class="footer-links">
            <a class="footer-link-pill" href="mailto:shailesh.rawat1403@gmail.com">Email</a>
            <a class="footer-link-pill" href="https://www.linkedin.com/in/shailesh-rawat" target="_blank" rel="noopener noreferrer">LinkedIn</a>
            <a class="footer-link-pill" href="https://github.com/ShaileshRawat1403" target="_blank" rel="noopener noreferrer">GitHub</a>
        </div>
        <div class="footer-copyright">
            &copy; {today.getFullYear()} Shailesh Rawat (san_serif_sentiments). All rights reserved.
        </div>
    </div>
</footer>
<style>
.footer {
    width: 100%;
    max-width: min(1100px, 100%);
    margin: clamp(3rem, 7vw, 4.5rem) 0 2rem 0;
    padding: 1.5rem 1rem 0;
    border-top: 1px solid var(--color-border);
}
.footer-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
    gap: 1rem;
}
.footer-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
}
.footer-link-pill {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 999px;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    font-size: 0.8rem;
    text-decoration: none;
    background-color: var(--color-blockquote-bg);
    transition: color 0.2s ease, border-color 0.2s ease;
}
.footer-link-pill:hover {
    color: var(--color-text-body);
    border-color: color-mix(in srgb, var(--color-accent) 40%, var(--color-border));
}
.footer-copyright {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-text-muted);
}
@media (max-width: 720px) {
    .footer-inner {
        flex-wrap: wrap;
        justify-content: center;
        text-align: center;
    }
    .footer-links {
        justify-content: center;
    }
}

</style>
