    background-color: color-mix(in srgb, var(--color-accent) 10%, var(--color-bg));
    color: var(--color-accent);
    padding: 0.2rem 0.6rem;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 500;
    border: 1px solid color-mix(in srgb, var(--color-accent) 20%, transparent);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100px;
}

.card-stats {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
}

.reading-time {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    font-weight: 500;
}

.reading-time svg {
    opacity: 0.6;
}

.card-hover-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, transparent 0%, color-mix(in srgb, var(--color-accent) 8%, transparent) 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
}

.enhanced-card:hover .card-hover-overlay {
    opacity: 1;
}

/* Mobile optimizations */
@media (max-width: 767px) {
    .card-content {
        padding: 1.2rem;
    }
    
    .card-title {
        font-size: 1.2rem;
        -webkit-line-clamp: 2;
        height: 3.12rem;
        min-height: 3.12rem;
    }
    
    .card-description {
        font-size: 0.85rem;
        -webkit-line-clamp: 2;
        line-height: 1.4;
        min-height: 2.8rem;
    }
    

    
    .tag {
        max-width: 80px;
        font-size: 0.65rem;
    }
    
    .card-footer {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.8rem;
        min-height: 3rem;
    }
    
    .card-stats {
        align-self: flex-end;
    }
}

/* Large screen optimizations */
@media (min-width: 1200px) {
    .card-title {
        font-size: 1.5rem;
    }
    
    .card-description {
        font-size: 1rem;
    }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
    .enhanced-card {
        transition: none;
    }
    
    .card-hover-overlay {
        display: none;
    }
}
</style>