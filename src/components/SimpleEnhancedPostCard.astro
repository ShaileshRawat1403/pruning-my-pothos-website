---
interface Props {
    entry: any;
}

const { entry } = Astro.props;
const { collection, slug } = entry;

// Calculate URL
let url = `/${collection}/${slug}`;
if (collection === 'shelf') {
    url = `/shelf/${slug}`;
}

// Get content metadata
const title = entry.data.title;
const description = entry.data.description || entry.data.summary;
const tags = entry.data.tags || [];

// Reading time calculation (if not provided)
const readingTime = entry.data.readingTime || Math.ceil((entry.body?.length || 0) / 1000);

// Content type determination
const contentType = entry.data.contentType || (() => {
    const length = entry.body?.length || 0;
    if (length < 1000) return 'quick-read';
    if (length < 3000) return 'deep-dive';
    return 'technical';
})();

// Content type config
const contentTypeConfig = {
    'quick-read': { label: 'Quick', color: 'var(--color-accent)' },
    'deep-dive': { label: 'Deep', color: '#10b981' },
    'technical': { label: 'Technical', color: '#f59e0b' }
};

const typeInfo = contentTypeConfig[contentType] || contentTypeConfig['quick-read'];

// Format collection name
const collectionLabel = collection.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase());

// Get display tags (max 3)
const displayTags = tags.slice(0, 3);

---
<a href={url} class="enhanced-card">
    
    <div class="card-content">
        <!-- Collection badge with enhanced styling -->
        <div class="card-header">
            <span class="card-collection">{collectionLabel}</span>
            {contentType && <span class="card-type" style={`background-color: ${typeInfo.color}20; color: ${typeInfo.color}; border: 1px solid ${typeInfo.color}40`}>{typeInfo.label}</span>}
        </div>
        
        <!-- Title with better typography -->
        <h2 class="card-title">{title}</h2>
        
        <!-- Description with better truncation -->
        <p class="card-description">{description}</p>
        
        <!-- Enhanced footer with tags and metadata -->
        <div class="card-footer">
            {displayTags.length > 0 && (
                <div class="card-tags">
                    {displayTags.map(tag => <span class="tag">{tag}</span>)}
                </div>
            )}
            <div class="card-stats">
                <span class="reading-time">
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M12 6v6l4 2"/>
                    </svg>
                    {readingTime} min
                </span>
            </div>
        </div>
    </div>
    
    <!-- Hover overlay effect -->
    <div class="card-hover-overlay"></div>
</a>

<style>
.enhanced-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-blockquote-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    text-decoration: none;
    color: var(--color-text-body);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    height: 100%;
    min-height: 100%;
}

.enhanced-card:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0,0,0,0.12);
    border-color: var(--color-accent);
}



