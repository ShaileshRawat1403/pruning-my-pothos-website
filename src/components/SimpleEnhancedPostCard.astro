    align-items: center;
    margin-bottom: 1rem;
    gap: 0.5rem;
}

.card-collection {
    background-color: var(--color-code-bg);
    color: var(--color-text-heading);
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.75rem;
