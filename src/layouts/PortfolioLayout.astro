---
const { title = 'Portfolio' } = Astro.props;
---
<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="256x256" href="/favicon.png" />
    <script is:inline>
      const getPortfolioTheme = () => {
        const stored = localStorage.getItem('theme');
        if (stored) {
          return stored === 'dark' ? 'dark' : 'light';
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      };

      document.documentElement.setAttribute('data-theme', getPortfolioTheme());
    </script>
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');

      :root {
        --bg: #0b1120;
        --ink: #e2e8f0;
        --muted: #94a3b8;
        --primary: #60a5fa;
        --primary-strong: #38bdf8;
        --primary-soft: rgba(96, 165, 250, 0.18);
        --badge-bg: #90e0ef;
        --badge-text: #0b2230;
        --accent: #e2e8f0;
        --border: #1e293b;
        --card: #111827;
        --shadow: 0 18px 40px rgba(2, 6, 23, 0.45);
        --highlight: #0f766e;
        --nav-bg: rgba(15, 23, 42, 0.9);
        --hero-bg: #0f172a;
        --panel-bg: #0f172a;
        --chip-bg: #111827;
        --chip-text: #94a3b8;
        --tab-bg: #0f172a;
        --tab-active-bg: #e2e8f0;
        --tab-active-text: #0f172a;
        --callout-bg: #2563eb;
        --pre-bg: #020617;
        --brand-bg: #0f172a;
        --brand-text: #e2e8f0;
        --btn-bg: #0f172a;
        --btn-text: #e2e8f0;
        --section-alt: #0b1220;
        --section-white: #0b1120;
      }

      :root[data-theme='light'] {
        --bg: #f8fafc;
        --ink: #0f172a;
        --muted: #475569;
        --primary: #2563eb;
        --primary-strong: #1d4ed8;
        --primary-soft: #eff6ff;
        --badge-bg: #90e0ef;
        --badge-text: #0b2230;
        --accent: #0f172a;
        --border: #e2e8f0;
        --card: #ffffff;
        --shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
        --highlight: #99f6e4;
        --nav-bg: rgba(255, 255, 255, 0.8);
        --hero-bg: #ffffff;
        --panel-bg: #ffffff;
        --chip-bg: #f1f5f9;
        --chip-text: #64748b;
        --tab-bg: #ffffff;
        --tab-active-bg: #0f172a;
        --tab-active-text: #ffffff;
        --callout-bg: #2563eb;
        --pre-bg: #0f172a;
        --brand-bg: #0f172a;
        --brand-text: #ffffff;
        --btn-bg: #0f172a;
        --btn-text: #ffffff;
        --section-alt: #f8fafc;
        --section-white: #ffffff;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: 'Plus Jakarta Sans', sans-serif;
        color: var(--ink);
        background: var(--bg);
        line-height: 1.7;
      }

      ::selection {
        background: rgba(96, 165, 250, 0.3);
      }

      h1,
      h2,
      h3 {
        margin: 0 0 1rem;
        font-family: 'Plus Jakarta Sans', sans-serif;
        letter-spacing: -0.02em;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      .page {
        margin: 0;
        padding-bottom: 5rem;
      }

      .nav {
        position: sticky;
        top: 0;
        z-index: 10;
        background: var(--nav-bg);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--border);
      }

      .nav-inner {
        max-width: 1120px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 64px;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 700;
      }

      .brand-link {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
      }

      .brand-mark {
        width: 32px;
        height: 32px;
        border-radius: 10px;
        background: var(--brand-bg);
        color: var(--brand-text);
        display: grid;
        place-items: center;
        font-weight: 700;
      }

      .nav-links {
        display: none;
        gap: 2rem;
        font-size: 0.95rem;
        color: var(--muted);
        font-weight: 500;
      }

      .nav-links a:hover {
        color: var(--primary);
      }

      .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.7rem 1.5rem;
        border-radius: 999px;
        background: var(--btn-bg);
        color: var(--btn-text);
        font-weight: 600;
        font-size: 0.9rem;
        border: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        box-shadow: 0 12px 30px rgba(2, 6, 23, 0.25);
      }

      .btn.btn-nav {
        padding: 0.45rem 1rem;
        font-size: 0.8rem;
        border-radius: 12px;
      }

      .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 16px 34px rgba(15, 23, 42, 0.2);
      }

      .btn-hero {
        padding: 1rem 2rem;
        border-radius: 16px;
        font-weight: 700;
      }

      .link-row {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
      }

      .btn-hero:hover {
        transform: translateY(-2px) scale(1.02);
      }

      .hero {
        padding: 6rem 0 4rem;
        text-align: center;
        position: relative;
        background: var(--hero-bg);
        overflow: hidden;
        border-bottom: 1px solid var(--border);
      }

      .hero::after {
        content: '';
        position: absolute;
        top: -240px;
        right: -200px;
        width: 600px;
        height: 600px;
        border-radius: 50%;
        background: rgba(96, 165, 250, 0.18);
        filter: blur(40px);
        z-index: -1;
      }

      .badge {
        display: inline-flex;
        align-items: center;
        padding: 0.35rem 0.9rem;
        border-radius: 999px;
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        background: var(--badge-bg);
        color: var(--badge-text);
      }

      .hero h1 {
        font-size: clamp(2.5rem, 5vw, 4.3rem);
        margin: 1.5rem 0 1rem;
        font-weight: 800;
      }

      .hero h1 span {
        color: var(--primary);
      }

      .hero p {
        margin: 0 auto 1.8rem;
        max-width: 720px;
        font-size: 1.2rem;
        color: var(--muted);
      }

      .hero-actions {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
      }

      .icon-row {
        display: inline-flex;
        align-items: center;
        gap: 1rem;
        color: #94a3b8;
      }

      .icon-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s ease, color 0.2s ease;
      }

      .icon-link:hover {
        color: var(--primary);
        transform: translateY(-2px);
      }

      .icon-link svg {
        transition: transform 0.2s ease;
      }

      .icon-link:hover svg {
        transform: scale(1.08);
      }

      .section {
        padding: 4.5rem 0;
      }

      .hero-inner,
      .section-inner {
        max-width: 1120px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      .section-alt {
        background: var(--section-alt);
        border-top: 1px solid var(--border);
        border-bottom: 1px solid var(--border);
      }

      .section-white {
        background: var(--section-white);
      }

      .section-title {
        font-size: 2.2rem;
        font-weight: 700;
      }

      .section-lead {
        color: var(--muted);
        max-width: 640px;
      }

      .grid-2 {
        display: grid;
        gap: 2.5rem;
        align-items: center;
      }

      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: var(--shadow);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }

      .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 20px 42px rgba(2, 6, 23, 0.6);
      }

      .muted {
        color: var(--muted);
      }

      .stack {
        display: grid;
        gap: 1.5rem;
      }

      .stack-center {
        align-items: center;
        text-align: center;
      }

      .stack-center .section-lead {
        margin-left: auto;
        margin-right: auto;
        text-align: center;
      }

      .feature {
        display: flex;
        gap: 1rem;
      }

      .feature-icon {
        width: 42px;
        height: 42px;
        border-radius: 14px;
        background: var(--panel-bg);
        border: 1px solid var(--border);
        display: grid;
        place-items: center;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        box-shadow: 0 10px 20px rgba(2, 6, 23, 0.5);
      }

      .focus-grid {
        display: grid;
        gap: 1.5rem;
        align-items: stretch;
        justify-items: stretch;
      }

      .focus-grid .card {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        height: 100%;
      }

      .focus-grid .card pre {
        margin-top: auto;
      }

      .focus-grid-space {
        margin-top: 2.5rem;
      }

      .focus-card {
        padding: 1.6rem;
        border-radius: 20px;
        border: 1px solid var(--border);
        background: var(--panel-bg);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        display: flex;
        flex-direction: column;
        gap: 0.9rem;
        align-items: flex-start;
        height: 100%;
      }

      .focus-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow);
        border-color: #334155;
      }

      .focus-icon {
        width: 42px;
        height: 42px;
        border-radius: 14px;
        background: var(--panel-bg);
        border: 1px solid var(--border);
        display: grid;
        place-items: center;
        margin-bottom: 1rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        box-shadow: 0 10px 20px rgba(2, 6, 23, 0.5);
      }

      .focus-card h3 {
        margin-bottom: 0;
        min-height: 56px;
      }

      .focus-card p {
        margin: 0;
      }

      .feature:hover .feature-icon,
      .focus-card:hover .focus-icon {
        transform: translateY(-2px);
        box-shadow: 0 14px 26px rgba(15, 23, 42, 0.12);
      }

      .feature-icon svg,
      .focus-icon svg {
        transition: transform 0.2s ease;
      }

      .feature:hover .feature-icon svg,
      .focus-card:hover .focus-icon svg {
        transform: scale(1.08);
      }

      .samples-header {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
      }

      .samples-header > div:first-child {
        flex: 1;
      }

      .tabs {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        justify-content: flex-end;
      }

      .tab {
        border-radius: 999px;
        border: 1px solid var(--border);
        padding: 0.4rem 1rem;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        background: var(--tab-bg);
        color: var(--muted);
        cursor: pointer;
        transition: background 0.2s ease, border-color 0.2s ease, color 0.2s ease;
      }

      .tab.is-active {
        background: var(--tab-active-bg);
        color: var(--tab-active-text);
        border-color: var(--tab-active-bg);
      }

      .tab:hover {
        border-color: var(--primary);
        color: var(--primary);
      }

      .samples-grid {
        display: grid;
        gap: 1.5rem;
        margin-top: 2rem;
        align-items: stretch;
      }

      .sample-card {
        background: var(--panel-bg);
        border: 1px solid var(--border);
        border-radius: 20px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        box-shadow: var(--shadow);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        min-height: 100%;
      }

      .sample-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 44px rgba(2, 6, 23, 0.6);
      }

      .sample-accent {
        height: 6px;
        background: var(--sample-accent, var(--primary));
      }

      .sample-body {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        flex: 1;
      }

      .sample-title {
        min-height: 84px;
        margin: 0;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .sample-desc {
        min-height: 96px;
        margin: 0;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .tag-row {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        min-height: 28px;
        align-items: center;
      }

      .tag {
        padding: 0.2rem 0.5rem;
        border-radius: 10px;
        background: var(--chip-bg);
        font-size: 0.6rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        color: var(--chip-text);
        line-height: 1.2;
      }

      .sample-link {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-weight: 600;
        color: var(--ink);
        transition: transform 0.2s ease, color 0.2s ease;
        margin-top: auto;
      }

      .sample-card:hover .sample-link {
        transform: translateX(4px);
        color: var(--primary);
      }

      .callout {
        margin-top: 3rem;
        background: var(--callout-bg);
        color: #fff;
        border-radius: 28px;
        padding: 2rem;
        display: grid;
        gap: 1.5rem;
      }

      .callout-inner {
        display: grid;
        gap: 2rem;
        align-items: center;
      }

      .callout-card {
        background: rgba(255, 255, 255, 0.12);
        border-radius: 16px;
        padding: 1rem 1.2rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .impact-card {
        min-width: 260px;
      }

      .impact-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        opacity: 0.7;
      }

      .contact-grid {
        display: grid;
        gap: 1rem;
      }

      .contact-grid-space {
        margin-top: 2rem;
      }

      .contact-label {
        font-weight: 600;
      }

      .contact-card {
        padding: 1.2rem;
        border: 1px solid var(--border);
        border-radius: 16px;
        display: grid;
        gap: 0.75rem;
        background: var(--panel-bg);
        align-items: center;
        justify-items: center;
        text-align: center;
        transition: background 0.2s ease, border-color 0.2s ease;
      }

      .contact-card:hover {
        background: color-mix(in srgb, var(--panel-bg) 85%, #0f172a 15%);
        border-color: color-mix(in srgb, var(--border) 70%, #64748b 30%);
      }

      .contact-icon {
        width: 28px;
        height: 28px;
        color: #94a3b8;
        transition: transform 0.2s ease, color 0.2s ease;
      }

      .contact-card:hover .contact-icon {
        transform: scale(1.08);
        color: var(--primary);
      }

      .method-card {
        display: grid;
        gap: 1rem;
      }

      :root[data-theme='light'] .method-card {
        background: #ffffff;
        border: 1px solid var(--border);
        box-shadow: 0 16px 32px rgba(15, 23, 42, 0.08);
      }

      .method-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: #94a3b8;
        font-size: 0.7rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
      }

      :root[data-theme='light'] .method-header {
        color: #94a3b8;
      }

      .method-dots {
        display: flex;
        gap: 0.4rem;
      }

      .method-dot {
        width: 8px;
        height: 8px;
        border-radius: 999px;
      }

      .dot-red {
        background: #f87171;
      }

      .dot-amber {
        background: #f59e0b;
      }

      .dot-green {
        background: #34d399;
      }

      .method-bars {
        display: grid;
        gap: 0.7rem;
      }

      .method-bar {
        height: 10px;
        border-radius: 999px;
        background: #1e293b;
      }

      :root[data-theme='light'] .method-bar {
        background: #0f172a;
        opacity: 0.9;
      }

      .method-footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 0.9rem;
        border-top: 1px solid #1e293b;
        padding-top: 1rem;
      }

      :root[data-theme='light'] .method-footer {
        border-top: 1px solid #e2e8f0;
        color: #1f2937;
      }

      .method-output {
        color: var(--primary);
        font-weight: 600;
      }

      .quote-card {
        background: var(--panel-bg);
        color: #e2e8f0;
        border-radius: 20px;
        padding: 1.6rem;
        box-shadow: var(--shadow);
      }

      :root[data-theme='light'] .quote-card {
        background: #ffffff;
        color: #0f172a;
        border: 1px solid var(--border);
        box-shadow: 0 16px 32px rgba(15, 23, 42, 0.08);
      }

      :root[data-theme='light'] .quote-subtitle {
        color: #94a3b8;
      }

      .quote-text {
        font-style: italic;
      }

      .quote-meta {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        margin-top: 1.2rem;
      }

      .quote-avatar {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        background: var(--primary);
      }

      .quote-subtitle {
        font-size: 0.85rem;
        color: #94a3b8;
      }

      :root[data-theme='light'] .quote-text {
        color: #0f172a;
        font-weight: 500;
      }

      :root[data-theme='light'] .quote-avatar {
        background: #2563eb;
      }

      :root[data-theme='light'] .quote-avatar {
        background: #2563eb;
      }

      .callout-title {
        margin-bottom: 0.6rem;
      }

      .callout-title .highlight {
        background: rgba(255, 255, 255, 0.2);
        padding: 0 0.3rem;
        border-radius: 6px;
      }

      .callout-lead {
        color: #dbeafe;
      }

      .callout-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.2em;
      }

      .callout-value {
        margin: 0.5rem 0 0;
      }

      .meta-list {
        display: grid;
        gap: 0.8rem;
        margin-top: 1rem;
      }

      .highlight {
        background: linear-gradient(180deg, transparent 65%, var(--highlight) 65%);
      }

      .media-placeholder {
        margin: 1.5rem 0 2.5rem;
        padding: 1.5rem;
        border-radius: 16px;
        border: 1px dashed var(--border);
        background: var(--panel-bg);
        color: var(--muted);
        text-align: center;
        font-weight: 600;
        letter-spacing: 0.02em;
      }

      .media-shot {
        margin: 1.5rem 0 2.5rem;
        padding: 1.25rem;
        border-radius: 16px;
        border: 1px solid var(--border);
        background: var(--panel-bg);
      }

      .media-shot img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 12px;
      }

      .media-shot figcaption {
        margin-top: 0.75rem;
        font-size: 0.9rem;
        color: var(--muted);
        text-align: center;
      }

      .diagram {
        margin: 1.5rem 0 1.5rem;
        padding: 1.25rem;
        border-radius: 16px;
        border: 1px solid var(--border);
        background: var(--panel-bg);
        color: var(--muted);
        text-align: left;
      }

      .diagram svg {
        width: 100%;
        height: auto;
        display: block;
      }

      .diagram rect,
      .diagram .diagram-line {
        stroke: currentColor;
        stroke-width: 2;
        fill: none;
      }

      .diagram .diagram-arrow {
        fill: currentColor;
        stroke: none;
      }

      .diagram .diagram-label {
        fill: var(--ink);
        font-size: 12px;
        font-weight: 600;
        font-family: 'Plus Jakarta Sans', sans-serif;
      }

      .diagram figcaption {
        margin-top: 0.75rem;
        font-size: 0.9rem;
        color: var(--muted);
      }

      .text-primary {
        color: var(--primary);
      }

      pre {
        background: var(--pre-bg);
        color: #e2e8f0;
        padding: 1rem 1.2rem;
        border-radius: 16px;
        overflow-x: auto;
      }

      .theme-toggle {
        border: 1px solid var(--border);
        background: transparent;
        color: var(--muted);
        padding: 0;
        width: 40px;
        height: 40px;
        border-radius: 14px;
        font-size: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        transition: border-color 0.2s ease, color 0.2s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }

      .theme-toggle svg {
        width: 16px;
        height: 16px;
        display: block;
      }

      .theme-icon-sun,
      .theme-icon-moon {
        display: none;
      }

      :root[data-theme='light'] .theme-icon-sun {
        display: block;
      }

