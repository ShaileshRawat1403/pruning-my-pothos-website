---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import ContentDiscovery from '@/components/ContentDiscovery.astro';

// Load all content collections
const stickyNotes = await getCollection('sticky-notes');
const sentences = await getCollection('sentences');
const self = await getCollection('self');
const systems = await getCollection('systems');
const shelf = await getCollection('shelf', ({ id }) =>
  id.startsWith('music/')
  || id.startsWith('local-experiments/')
  || id.startsWith('notes/')
  || id.startsWith('tools/')
  || id.startsWith('philosophy/')
  || id.startsWith('shared-resources/')
);

// Combine all content with collection metadata
const allContent = [
  ...stickyNotes.map((item) => ({ ...item, collection: 'sticky-notes' })),
  ...sentences.map((item) => ({ ...item, collection: 'sentences' })),
  ...self.map((item) => ({ ...item, collection: 'self' })),
  ...systems.map((item) => ({ ...item, collection: 'systems' })),
  ...shelf.map((item) => ({ ...item, collection: 'shelf' })),
];

// Sort by date (if available) or by featured signal
const discoveryPosts = allContent.sort((a, b) => {
  if (a.data.publishDate && b.data.publishDate) {
    return b.data.publishDate.getTime() - a.data.publishDate.getTime();
  }
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return 0;
});
---

<Layout
  title="Home | A Thinking Workspace"
  description="A personal workspace for AI systems, language, and reflective technical writing across systems, sentences, shelf, and notes."
  image="/my-self-portrait.png"
>
  <section class="homepage-hero">
    <p class="hero-animated-line">
      <a href="/self/diy" class="hero-diy-cta">D.I.Y.</a>
      <span class="hero-highlight hero-intel">
        <span class="hero-aura" aria-hidden="true"></span>
        <span class="hero-bounce hero-bounce-1">i</span>ntell<span class="hero-bounce hero-bounce-2">i</span>gence
      </span>
    </p>

    <iframe
      class="illustration-container"
      src="/portrait.html"
      frameborder="0"
      scrolling="no"
      title="Portrait illustration"
    ></iframe>

    <a href="/dual-nlp-framework" class="hero-build-cta">
      <span class="hero-build-icon" aria-hidden="true">&lt;/&gt;</span>
      <span class="hero-build-text">build an app?</span>
    </a>

    <h1 class="tagline">Thinker. Tinkerer. Translator.</h1>
    <p class="intro">
      A personal workspace for exploring ideas in artificial intelligence, language, and systems. This site is a collection of notes, essays, and frameworks in various states of completion.
    </p>
  </section>

  <ContentDiscovery posts={discoveryPosts} />
</Layout>

<style>
  .homepage-hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 4rem 0 3rem;
  }

  .hero-animated-line {
    width: min(720px, 90vw);
    margin-bottom: clamp(1.25rem, 2.5vw, 2rem);
    font-family: var(--font-heading);
    font-size: clamp(1.8rem, 5.4vw, 3.2rem);
    font-weight: 700;
    letter-spacing: 0.01em;
    text-align: center;
  }

  .hero-diy-cta {
    display: inline-block;
    padding: 0.4rem 1.2rem;
    border-radius: 999px;
    background-color: transparent;
    border: 1px solid rgba(249, 115, 22, 0.4);
    color: #f97316;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.8em;
    transition: all 0.2s ease;
    animation: fade-in-up 0.8s ease 0.5s forwards;
    opacity: 0;
  }

  .hero-diy-cta:hover {
    background-color: rgba(249, 115, 22, 0.1);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }

  .hero-highlight {
    background-image: linear-gradient(
      90deg,
      color-mix(in srgb, var(--color-accent) 70%, var(--color-bg)),
      var(--color-accent),
      color-mix(in srgb, var(--color-accent) 70%, var(--color-text-heading))
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: hero-gradient-shift 8s ease infinite;
    text-shadow: 0 0 1px rgba(0, 0, 0, 0.1);
  }

  .hero-intel {
    position: relative;
    display: inline-block;
    margin-left: 0.2em;
    white-space: nowrap;
  }

  .hero-aura {
    position: absolute;
    inset: -22% -10%;
    background: radial-gradient(
      closest-side,
      color-mix(in srgb, var(--color-accent) 30%, transparent),
      transparent 70%
    );
    border-radius: 999px;
    filter: blur(12px);
    opacity: 0.5;
    z-index: -1;
  }

  .hero-bounce {
    display: inline-block;
    position: relative;
    animation: hero-bounce 2s cubic-bezier(0.25, 1, 0.5, 1) infinite;
  }

  .hero-bounce-2 {
    animation-delay: 0.1s;
  }

  .illustration-container {
    width: clamp(160px, 32vw, 260px);
    aspect-ratio: 1 / 1;
    margin-bottom: 0.8rem;
    border: none;
    animation: fade-in-up 0.8s ease 0.2s forwards;
    opacity: 0;
  }

  .hero-build-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.45rem;
    margin-top: -0.08rem;
    margin-bottom: clamp(0.85rem, 1.8vw, 1.2rem);
    padding: 0.62rem 1.45rem;
    border-radius: 999px;
    border: 1px solid color-mix(in srgb, #6ea3ff 70%, #1f2937);
    background: linear-gradient(160deg, #3b4252 0%, #10141f 85%);
    color: #f8fafc;
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.84rem;
    letter-spacing: 0.01em;
    font-weight: 700;
    box-shadow: 0 10px 24px rgba(15, 23, 42, 0.2), 0 0 0 1px rgba(255, 255, 255, 0.08) inset;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    position: relative;
    overflow: hidden;
    animation: cta-float 3.2s ease-in-out infinite;
  }

  .hero-build-cta::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(120deg, transparent 20%, rgba(147, 197, 253, 0.18) 50%, transparent 80%);
    transform: translateX(-130%);
    animation: cta-scan 2.8s ease-in-out infinite;
    pointer-events: none;
  }

  .hero-build-icon {
    font-size: 0.76rem;
    color: #93c5fd;
    letter-spacing: -0.01em;
    opacity: 0.9;
  }

  .hero-build-text {
    position: relative;
    padding-right: 0.48rem;
  }

  .hero-build-text::after {
    content: '_';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-53%);
    color: #93c5fd;
    animation: cta-caret-blink 1s steps(1, end) infinite;
  }

  .hero-build-cta:hover {
    transform: translateY(-2px);
    border-color: color-mix(in srgb, #93c5fd 86%, #1f2937);
    box-shadow: 0 13px 28px rgba(15, 23, 42, 0.25), 0 0 0 1px rgba(255, 255, 255, 0.13) inset;
  }

  .tagline {
    font-size: 2.2rem;
    margin-bottom: 1rem;
    letter-spacing: 0.5px;
  }

  .intro {
    max-width: 560px;
    margin: 0 auto;
    color: var(--color-text-muted);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  @keyframes hero-gradient-shift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes hero-bounce {
    0%,
    100% {
      transform: translateY(0) rotate(0);
      color: inherit;
      text-shadow: none;
    }
    50% {
      transform: translateY(-6px) rotate(-5deg);
      color: #f97316;
      text-shadow: 0 0 10px #f97316;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-highlight,
    .hero-bounce,
    .hero-build-cta,
    .hero-build-cta::after,
    .hero-build-text::after {
      animation: none;
    }
  }

  @media (max-width: 720px) {
    .homepage-hero {
      padding: 2.75rem 0 3.25rem;
    }

    .hero-animated-line {
      width: min(560px, 92vw);
      margin-bottom: 1.25rem;
    }

    .tagline {
      font-size: 1.75rem;
    }

    .intro {
      font-size: 1rem;
      padding: 0 0.5rem;
    }

    .hero-build-cta {
      font-size: 0.8rem;
      padding: 0.54rem 1.2rem;
    }
  }

  @media (max-width: 420px) {
    .hero-animated-line {
      font-size: clamp(1.35rem, 7.5vw, 2.2rem);
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes cta-float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-2px);
    }
  }

  @keyframes cta-scan {
    0%,
    65%,
    100% {
      transform: translateX(-130%);
    }
    80% {
      transform: translateX(130%);
    }
  }

  @keyframes cta-caret-blink {
    0%,
    49% {
      opacity: 1;
    }
    50%,
    100% {
      opacity: 0;
    }
  }
</style>
