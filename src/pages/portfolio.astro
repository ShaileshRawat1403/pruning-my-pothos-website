---
import PortfolioLayout from '../layouts/PortfolioLayout.astro';
import Footer from '../components/Footer.astro';
import { portfolioSamples } from '../data/portfolio-samples';

const focusAreas = [
  {
    title: 'GenAI + LLM Platforms',
    description:
      'Defining documentation strategy for model behavior, safety playbooks, and production-ready deployments.',
    icon: 'cpu',
  },
  {
    title: 'Developer Documentation',
    description:
      'Creating zero-friction onboarding via SDK guides, API references, and example-driven content.',
    icon: 'code',
  },
  {
    title: 'Internal Enablement',
    description:
      'Translating roadmap shifts into training kits and adoption materials for non-technical teams.',
    icon: 'chat',
  },
  {
    title: 'Executive Strategy',
    description:
      'Synthesizing complex technical risks into leadership-ready narratives and decisions.',
    icon: 'shield',
  },
];

const samples = portfolioSamples.map((sample) => ({
  slug: sample.slug,
  title: sample.title,
  category: sample.category,
  tags: sample.tags,
  description: sample.cardDescription,
  accent: sample.accent,
}));

const contacts = [
  { label: 'Email', href: 'mailto:shailesh.rawat1403@gmail.com', icon: 'mail' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/shailesh-rawat/', icon: 'linkedin' },
  { label: 'GitHub', href: 'https://github.com/ShaileshRawat1403', icon: 'github' },
  { label: 'WhatsApp', href: 'https://wa.me/918126539464', icon: 'send' },
];

const socialLinks = [
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/shailesh-rawat/', icon: 'linkedin' },
  { label: 'GitHub', href: 'https://github.com/ShaileshRawat1403', icon: 'github' },
  { label: 'Website', href: 'https://pruningmypothos.com', icon: 'globe' },
