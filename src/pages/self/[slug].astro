---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import type { CollectionEntry } from 'astro:content';
import TagList from '@/components/TagList.astro';
import ContinueBlock from '@/components/ContinueBlock.astro';
import { getAdjacentEntries, getRelatedEntries } from '@/utils/navigation';

export async function getStaticPaths() {
  const selfEntries = await getCollection('self');
  return selfEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'self'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const selfEntries = await getCollection('self');
const { previous, next } = getAdjacentEntries(selfEntries, entry.slug);
const relatedEntries = getRelatedEntries(selfEntries, entry.slug, entry.data.tags, 2);
const toLink = (item) => ({ title: item.data.title, href: `/self/${item.slug}` });
const previousLink = previous ? toLink(previous) : null;
const nextLink = next ? toLink(next) : null;
const relatedLinks = relatedEntries.map(toLink);
---

<Layout title={`${entry.data.title} | A Thinking Workspace`}>
  <article class="self-entry">
    <header>
      <h1>{entry.data.title}</h1>
      <p class="self-entry-description">{entry.data.description}</p>
      <TagList tags={entry.data.tags} />
    </header>
    <Content />
    <ContinueBlock
      sectionLabel="/self"
      sectionHref="/self"
      previous={previousLink}
      next={nextLink}
      related={relatedLinks}
    />
  </article>
</Layout>

<style>
  .self-entry {
    text-align: left;
  }
  .self-entry p:first-of-type::first-letter {
    float: none;
    font-size: inherit;
    line-height: inherit;
    margin: 0;
  }
  .self-entry-description {
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
  }
</style>
