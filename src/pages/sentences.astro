---
import Layout from '@/layouts/Layout.astro';
import { sentenceCategories } from '../utils/sentenceCategories';
---
<Layout
  title="Sentences | A Thinking Workspace"
  description="Short reflective writing on attention, meaning, and judgment in modern AI and human systems."
  image="/covers/shelf/philosophy-attention.svg"
>
  <div class="section-head">
    <h1>Sentences</h1>
    <p class="mode-line lead">How humans make sense of systems.</p>
    <p class="subtitle">Slow thoughts, distilled.</p>
  </div>
  
  <div class="sentences-categories">
    {sentenceCategories.map((category) => (
      <a
        class="sentence-category-card"
        href={`/sentences/${category.slug}`}
        style={`--category-tone: ${category.tone}`}
      >
        <h2>{category.title}</h2>
        <p>{category.description}</p>
      </a>
    ))}
  </div>
</Layout>

<style>
  .sentences-categories {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.75rem;
  }
  .sentence-category-card {
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 1.75rem;
    background: color-mix(in srgb, var(--category-tone) 28%, var(--color-bg));
    transition: background-color 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    gap: 0.6rem;
  }
  .sentence-category-card:hover {
    background: color-mix(in srgb, var(--category-tone) 40%, var(--color-bg));
    border-color: color-mix(in srgb, var(--color-accent) 30%, var(--color-border));
    transform: translateY(-2px);
  }
  .sentence-category-card h2 {
    font-size: 1.35rem;
    margin: 0;
    min-height: 3.2em;
    line-height: 1.2;
  }
  .sentence-category-card p {
    color: var(--color-text-muted);
    font-size: 0.98rem;
    margin: 0;
    min-height: 3.6em;
    line-height: 1.5;
  }
  @media (max-width: 1000px) {
    .sentences-categories {
      grid-template-columns: 1fr;
    }
  }
</style>
