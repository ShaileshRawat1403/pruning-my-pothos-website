---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import TagList from '@/components/TagList.astro';
import ContinueBlock from '@/components/ContinueBlock.astro';
import { getAdjacentEntries, getRelatedEntries } from '@/utils/navigation';

export async function getStaticPaths() {
  const sentences = await getCollection('sentences');
  return sentences.map(sentence => ({
    params: { slug: sentence.slug },
    props: sentence,
  }));
}

const sentence = Astro.props;
const { Content } = await sentence.render();
const sentences = await getCollection('sentences');
const { previous, next } = getAdjacentEntries(sentences, sentence.slug);
const relatedEntries = getRelatedEntries(sentences, sentence.slug, sentence.data.tags, 2);
const toLink = (entry) => ({ title: entry.data.title, href: `/sentences/${entry.slug}` });
const previousLink = previous ? toLink(previous) : null;
const nextLink = next ? toLink(next) : null;
const relatedLinks = relatedEntries.map(toLink);
---
<Layout title={sentence.data.title}>
  <div class="sentence-detail-container">
    <div class="sentence-detail">
      <h1>{sentence.data.title}</h1>
      <TagList tags={sentence.data.tags} label="Tags" />
      <div class="sentence-content">
        <Content />
      </div>
      <ContinueBlock
        sectionLabel="/sentences"
        sectionHref="/sentences"
        previous={previousLink}
        next={nextLink}
        related={relatedLinks}
      />
    </div>
  </div>
</Layout>

<style>
  .sentence-detail-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 50vh;
  }
  .sentence-detail {
    max-width: 760px;
    border-left: 3px solid var(--color-accent);
    padding: 2rem;
  }
  .sentence-detail h1 {
    font-family: var(--font-serif);
    font-size: 2.3rem;
    line-height: 1.4;
    margin-bottom: 1.5rem;
  }
  .sentence-content {
    font-family: var(--font-serif);
    font-size: 1.2rem;
    line-height: 1.8;
  }
</style>
