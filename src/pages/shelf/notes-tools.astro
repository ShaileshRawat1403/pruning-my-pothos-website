---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { sortedByDate } from '@/utils';

const notesEntries = await getCollection('shelf', ({ id }) => id.startsWith('notes-tools/'));
const sortedNotes = sortedByDate(notesEntries);
---

<Layout title="Notes/Tools | Shelf">
  <div class="section-head">
    <h1>Notes/Tools</h1>
    <p class="subtitle lead">
      Working notes and the tools that keep them moving.
    </p>
  </div>
  <div class="card-grid">
    {sortedNotes.map(entry => (
      <a href={`/shelf/notes-tools/${entry.slug.split('/')[1]}`} class="card">
        <div class="card-img">
          {entry.data.coverUrl ? (
            <img src={entry.data.coverUrl} alt={`Cover image for ${entry.data.title}`} loading="lazy" />
          ) : (
            <span>Cover image</span>
          )}
        </div>
        <div class="card-content">
          <h2 class="card-title">{entry.data.title}</h2>
          <p class="card-description">{entry.data.description}</p>
        </div>
      </a>
    ))}
  </div>
</Layout>
