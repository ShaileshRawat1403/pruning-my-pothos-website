---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import { sortedByDate } from '@/utils';

const resourceEntries = await getCollection('shelf', ({ id }) => id.startsWith('shared-resources/'));
const sortedResources = sortedByDate(resourceEntries);
---

<Layout title="Shared Resources | Shelf">
  <div class="section-head">
    <h1>Shared Resources</h1>
    <p class="subtitle lead">
      References, decks, and explainers I keep close for repeated use.
    </p>
  </div>
  <div class="card-grid">
    {sortedResources.map(entry => (
      <a href={`/shelf/shared-resources/${entry.slug.split('/')[1]}`} class="card">
        <div class="card-img">
          {entry.data.coverUrl ? (
            <img src={entry.data.coverUrl} alt={`Cover image for ${entry.data.title}`} loading="lazy" />
          ) : (
            <span>Cover image</span>
          )}
        </div>
        <div class="card-content">
          <h2 class="card-title">{entry.data.title}</h2>
          <p class="card-description">{entry.data.description}</p>
        </div>
      </a>
    ))}
  </div>
</Layout>
