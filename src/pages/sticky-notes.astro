---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';

const stickyNotes = await getCollection('sticky-notes');
---
<Layout title="Sticky Notes | A Thinking Workspace">
  <div class="section-head">
    <h1>Sticky Notes</h1>
    <p class="mode-line lead">How ideas actually begin - messy, partial, human.</p>
    <p class="subtitle">A springboard for a silly (shðŸ¤¬ty) life. Kept raw on purpose.</p>
  </div>

  <div class="sticky-wall">
    {stickyNotes.map(note => (
      <a href={`/sticky-notes/${note.slug}`} class="note" style={`--rotation: ${note.data.rotation || 0}deg; --bg: ${note.data.color || 'var(--color-sticky-1)'};`}>
        <span class="note-title">{note.data.title}</span>
      </a>
    ))}
  </div>
</Layout>

<style>
    .sticky-wall {
        column-width: 220px;
        column-gap: 1.5rem;
        padding: 1rem;
        align-items: start;
    }
    .note {
        display: inline-block;
        width: 100%;
        margin: 0 0 1.5rem;
        padding: 1.5rem;
        background-color: var(--bg, var(--color-sticky-1));
        border: 1px solid var(--color-sticky-border);
        border-radius: 12px;
        font-family: var(--font-hand);
        font-size: 1.1rem;
        line-height: 1.6;
        overflow-wrap: anywhere;
        word-break: break-word;
        break-inside: avoid;
        box-shadow: 0 6px 14px var(--color-sticky-shadow);
        transform: rotate(var(--rotation, 0deg));
        transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
        text-decoration: none;
        color: var(--color-text-body);
    }
    .note-title {
        display: block;
        font-weight: 600;
        margin-bottom: 0;
    }
    .note:hover {
        transform: translateY(-2px) rotate(var(--rotation, 0deg));
        box-shadow: 0 10px 20px var(--color-sticky-shadow);
        border-color: var(--color-accent);
        z-index: 10;
        color: var(--color-text-body);
    }
    @media (max-width: 640px) {
        .sticky-wall {
            column-width: auto;
            column-count: 1;
            column-gap: 0;
            padding: 0.5rem 0;
        }
        .note {
            transform: none;
        }
        .note:hover {
            transform: translateY(-2px);
        }
    }
</style>
