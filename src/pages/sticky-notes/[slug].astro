---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import TagList from '@/components/TagList.astro';
import ContinueBlock from '@/components/ContinueBlock.astro';
import { getAdjacentEntries, getRelatedEntries } from '@/utils/navigation';

export async function getStaticPaths() {
  const stickyNotes = await getCollection('sticky-notes');
  return stickyNotes.map(note => ({
    params: { slug: note.slug },
    props: note,
  }));
}

const note = Astro.props;
const { Content } = await note.render();
const stickyNotes = await getCollection('sticky-notes');
const { previous, next } = getAdjacentEntries(stickyNotes, note.slug);
const relatedEntries = getRelatedEntries(stickyNotes, note.slug, note.data.tags, 2);
const toLink = (entry) => ({ title: entry.data.title, href: `/sticky-notes/${entry.slug}` });
const previousLink = previous ? toLink(previous) : null;
const nextLink = next ? toLink(next) : null;
const relatedLinks = relatedEntries.map(toLink);
---
<Layout title={note.data.title}>
  <div class="note-detail">
    <h1>{note.data.title}</h1>
    <TagList tags={note.data.tags} />
    <div class="note-content">
      <Content />
    </div>
    <ContinueBlock
      sectionLabel="/sticky-notes"
      sectionHref="/sticky-notes"
      previous={previousLink}
      next={nextLink}
      related={relatedLinks}
    />
  </div>
</Layout>

<style>
  .note-detail {
    max-width: 600px;
    margin: 0 auto;
    padding: 4rem 0;
  }
  .note-detail h1 {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 2rem;
  }
  .note-content {
    font-family: var(--font-serif);
    font-size: 1.2rem;
    line-height: 1.8;
  }
</style>
