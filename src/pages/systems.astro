---
import Layout from '@/layouts/Layout.astro';
import { systemCategories } from '../utils/systemCategories';
---
<Layout
  title="Systems | A Thinking Workspace"
  description="Long-form systems thinking on AI architecture, governance, language interfaces, and production reliability."
  image="/covers/shelf/shared-semantic-bridge.svg"
>
  <div class="section-head">
    <h1>Systems</h1>
    <p class="mode-line lead">How things are built and governed.</p>
    <p class="subtitle">Long-form thinking about frameworks, AI, documentation, and structure.</p>
  </div>

  <div class="systems-categories">
    {systemCategories.map((category) => (
      <a
        class="systems-category-card"
        href={`/systems/${category.slug}`}
        style={`--category-tone: ${category.tone}`}
      >
        <h2>{category.title}</h2>
        <p>{category.description}</p>
      </a>
    ))}
  </div>
</Layout>

<style>
  .systems-categories {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.75rem;
  }
  .systems-category-card {
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 1.75rem;
    background: color-mix(in srgb, var(--category-tone) 28%, var(--color-bg));
    transition: background-color 0.2s ease, border-color 0.2s ease, transform 0.2s ease;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    gap: 0.6rem;
  }
  .systems-category-card:hover {
    background: color-mix(in srgb, var(--category-tone) 40%, var(--color-bg));
    border-color: color-mix(in srgb, var(--color-accent) 30%, var(--color-border));
    transform: translateY(-2px);
  }
  .systems-category-card h2 {
    font-size: 1.35rem;
    margin: 0;
    min-height: 3.6em;
    line-height: 1.2;
  }
  .systems-category-card p {
    color: var(--color-text-muted);
    font-size: 0.98rem;
    margin: 0;
    min-height: 4.8em;
    line-height: 1.5;
  }
  @media (max-width: 1000px) {
    .systems-categories {
      grid-template-columns: 1fr;
    }
  }
</style>
