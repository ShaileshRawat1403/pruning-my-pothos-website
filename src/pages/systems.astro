---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';

const systems = await getCollection('systems');
const systemColors = ['var(--color-sentence-1)', 'var(--color-sentence-2)', 'var(--color-sentence-3)'];
---
<Layout title="Systems | A Thinking Workspace">
  <h1>Systems</h1>
  <p class="subtitle">Long-form thinking about frameworks, AI, documentation, and structure.</p>

  <div class="systems-grid">
    {systems.map((system, index) => (
        <div class="system-card" style={`background-color: ${systemColors[index % systemColors.length]}`}>
            <h2>{system.data.title}</h2>
            <p>{system.data.description}</p>
            <a href={`/systems/${system.slug}`} class="read-more">Read more &rarr;</a>
        </div>
    ))}
    <div class="system-card placeholder">
      <h2>Future System</h2>
      <p>A placeholder for the next idea or framework to be explored and documented.</p>
    </div>
  </div>
</Layout>

<style>
    .subtitle {
        color: var(--color-text-muted);
        text-align: left;
        margin-bottom: 4rem;
        font-size: 1.1rem;
    }
  .systems-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  .system-card {
    background-color: transparent;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 2rem;
    transition: border-color 0.2s ease, background-color 0.2s ease;
    color: var(--color-text-body);
  }
  .system-card:hover {
      border-color: var(--color-accent);
  }
  .system-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-heading);
  }
  .system-card p {
    color: var(--color-text-muted);
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }
  .system-card.placeholder {
      background: repeating-linear-gradient(
          -45deg,
          rgba(128, 128, 128, 0.05),
          rgba(128, 128, 128, 0.05) 10px,
          rgba(128, 128, 128, 0.08) 10px,
          rgba(128, 128, 128, 0.08) 20px
      );
      border-style: dashed;
  }
  .read-more {
      font-family: var(--font-mono);
      font-size: 0.9rem;
      color: var(--color-accent);
      text-decoration: none;
  }
  .read-more:hover {
      text-decoration: underline;
  }
</style>
